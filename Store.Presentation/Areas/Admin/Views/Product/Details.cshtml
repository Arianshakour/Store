@using Store.Domain.Common.Date
@using Store.Domain.Dtoes.AdminPanel.Product
@model DetailsProductDto

@{
    ViewData["Title"] = "نمایش جزییات";
}

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="body">
                <form method="post" enctype="multipart/form-data">
                    <div class="row clearfix">
                        <div class="col-lg-8">
                            <h3>جزییات محصول</h3>
                            <br />
                            <div>
                                <div class="form-group">
                                    <div class="form-line">
                                        <label asp-for="ProductTitle" class="control-label"></label>
                                        <input type="text" asp-for="ProductTitle" class="form-control" readonly>
                                        <span asp-validation-for="ProductTitle"></span>
                                    </div>
                                </div>
                            </div>
                            <div>
                                <div class="form-group">
                                    <div class="form-line">
                                        <label asp-for="GroupId" class="control-label"></label>
                                        <select type="text" asp-for="GroupId" class="form-control" asp-items="ViewBag.GPar" id="GroupId" disabled>
                                            <option value="">انتخاب گروه</option>
                                        </select>
                                        <span asp-validation-for="GroupId"></span>
                                    </div>
                                </div>
                            </div>
                            <div>
                                <div class="form-group">
                                    <div class="form-line">
                                        <label asp-for="SubGroup" class="control-label"></label>
                                        <select type="text" asp-for="SubGroup" class="form-control" asp-items="ViewBag.GSub" id="SubGroupId" disabled>
                                            <option value="">انتخاب گروه</option>
                                        </select>
                                        <span asp-validation-for="SubGroup"></span>
                                    </div>
                                </div>
                            </div>
                            <div>
                                <div class="form-group">
                                    <div class="form-line">
                                        <label asp-for="IsValid" class="control-label"></label>
                                        <input type="checkbox" asp-for="IsValid" disabled>
                                        <span asp-validation-for="IsValid"></span>
                                    </div>
                                </div>
                            </div>
                            <div>
                                <div class="form-group">
                                    <div class="form-line">
                                        <label asp-for="@Model.CreateDate" class="control-label"></label>
                                        <input value="@Model.CreateDate.ToShamsi()" class="form-control" readonly />
                                    </div>
                                </div>
                            </div>
                            <div>
                                <div class="form-group">
                                    <div class="form-line">
                                        <label asp-for="Tags" class="control-label"></label>
                                        <input type="text" asp-for="Tags" class="form-control" placeholder="با - جدا کنید" readonly>
                                        <span asp-validation-for="Tags"></span>
                                    </div>
                                </div>
                            </div>

                            <div>
                                <button type="button" onclick="CloseModal()" class="btn btn-success m-l-15 waves-effect">بازگشت</button>
                                @* <button type="submit" asp-area="Admin" asp-controller="Product" asp-action="Index" class="btn btn-success m-l-15 waves-effect">بازگشت</button> *@
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <h3>مشخصات</h3>
                            <br />
                            <div>
                                <div class="form-group">
                                    <div class="form-line">
                                        <label asp-for="ImageName" class="control-label"></label>
                                        @if (Model.ImageName != null)
                                        {
                                            <img src="/SiteQaleb/UserAvatar/@Model.ImageName" class="thumbnail" style="max-width: 250px" />
                                        }
                                    </div>
                                </div>
                                <div>
                                    <div class="form-group">
                                        <div class="form-line">
                                            <label asp-for="Price" class="control-label"></label>
                                            <input type="number" asp-for="Price" class="form-control" readonly>
                                            <span asp-validation-for="Price"></span>
                                        </div>
                                    </div>
                                </div>
                                <div>
                                    <div class="form-group">
                                        <div class="form-line">
                                            <label asp-for="Mojodi" class="control-label"></label>
                                            <input type="number" asp-for="Mojodi" class="form-control" readonly>
                                            <span asp-validation-for="Mojodi"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>