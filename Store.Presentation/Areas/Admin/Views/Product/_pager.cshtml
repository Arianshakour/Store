    <div class="d-flex align-items-center" style="margin-right: 10px;padding-top: 20px; flex: 1;">
        @if (Model.pager.TotalPage > 0)
        {
            <ul class="pagination justify-content-end">
                @if (Model.pager.CurrentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link pagination-link" asp-area="Admin" asp-controller="Product" asp-action="Index" asp-route-page="1">نخست</a>
                    </li>
                    <li>
                        <a class="page-link pagination-link" asp-area="Admin" asp-controller="Product" asp-action="Index" asp-route-page="@(Model.pager.CurrentPage - 1)">قبلی</a>
                    </li>
                }
                @for (var pge = Model.pager.StartPage; pge <= Model.pager.EndPage; pge++)
                {
                    <li class="page-item @(pge==Model.pager.CurrentPage ? "active" : "")">
                        <a class="page-link pagination-link" asp-area="Admin" asp-controller="Product" asp-action="Index" asp-route-page="@pge">@pge</a>
                    </li>

                }
                @if (Model.pager.CurrentPage < Model.pager.TotalPage)
                {
                    <li class="page-item">
                        <a class="page-link pagination-link" id="page_@Model.pager.CurrentPage" asp-area="Admin" asp-controller="Product" asp-action="Index" asp-route-page="@(Model.pager.CurrentPage + 1)">بعدی</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link pagination-link" asp-area="Admin" asp-controller="Product" asp-action="Index" asp-route-page="@(Model.pager.TotalPage)">آخرین</a>
                    </li>
                }

            </ul>
        }
    </div>
</div>
