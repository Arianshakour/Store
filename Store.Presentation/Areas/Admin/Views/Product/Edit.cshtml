@using Store.Domain.Dtoes.AdminPanel.Product
@model EditProductDto

@{
    ViewData["Title"] = "ویرایش محصول";
}

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="body">
                <form method="post" enctype="multipart/form-data">
                    <input type="hidden" id="productid" asp-for="ProductId" />
                    <input type="hidden" asp-for="@Model.ImageName" />
                    <div class="row clearfix">
                        <div class="col-lg-8">
                            <h3>ویرایش محصول</h3>
                            <br />
                            <div>
                                <div class="form-group">
                                    <div class="form-line">
                                        <label asp-for="ProductTitle" class="control-label"></label>
                                        <input type="text" asp-for="ProductTitle" class="form-control">
                                        <span asp-validation-for="ProductTitle"></span>
                                    </div>
                                </div>
                            </div>
                            <div>
                                <div class="form-group">
                                    <div class="form-line">
                                        <label asp-for="GroupId" class="control-label"></label>
                                        <select type="text" asp-for="GroupId" class="form-control" asp-items="ViewBag.GPar" id="GroupId">
                                            <option value="">انتخاب گروه</option>
                                        </select>
                                        <span asp-validation-for="GroupId"></span>
                                    </div>
                                </div>
                            </div>
                            <div>
                                <div class="form-group">
                                    <div class="form-line">
                                        <label asp-for="SubGroup" class="control-label"></label>
                                        <select type="text" asp-for="SubGroup" class="form-control" asp-items="ViewBag.GSub" id="SubGroupId">
                                            <option value="">انتخاب گروه</option>
                                        </select>
                                        <span asp-validation-for="SubGroup"></span>
                                    </div>
                                </div>
                            </div>
                            <div>
                                <div class="form-group">
                                    <div class="form-line">
                                        <label asp-for="IsValid" class="control-label"></label>
                                        <input type="checkbox" asp-for="IsValid">
                                        <span asp-validation-for="IsValid"></span>
                                    </div>
                                </div>
                            </div>
                            <div>
                                <div class="form-group">
                                    <div class="form-line">
                                        <label asp-for="Tags" class="control-label"></label>
                                        <input type="text" asp-for="Tags" class="form-control" placeholder="با - جدا کنید" readonly>
                                        <span asp-validation-for="Tags"></span>
                                    </div>
                                </div>
                            </div>

                            <div>
                                <button type="submit" asp-area="Admin" asp-controller="Product" asp-action="Index" class="btn btn-success m-l-15 waves-effect">بازگشت</button>
                                <button type="submit" asp-area="Admin" asp-controller="Product" asp-action="Edit" class="btn btn-success m-l-15 waves-effect">ویرایش</button>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <h3>مشخصات</h3>
                            <br />
                            <div>
                                <div class="form-group">
                                    <div class="form-line">
                                        <label asp-for="ImageName" class="control-label"></label>
                                        @if (Model.ImageName != null)
                                        {
                                            <img id="imgProduct" src="/SiteQaleb/UserAvatar/@Model.ImageName" class="thumbnail" style="max-width: 250px" />
                                        }
                                    </div>
                                    <div class="w-50">
                                        <label class="control-label">تصویر جدید (اختیاری)</label>
                                        <input type="file" asp-for="imgUp" id="imgUp" class="form-control" />
                                    </div>
                                </div>
                                <div>
                                    <div class="form-group">
                                        <div class="form-line">
                                            <label asp-for="Price" class="control-label"></label>
                                            <input type="number" asp-for="Price" class="form-control">
                                            <span asp-validation-for="Price"></span>
                                        </div>
                                    </div>
                                </div>
                                <div>
                                    <div class="form-group">
                                        <div class="form-line">
                                            <label asp-for="Mojodi" class="control-label"></label>
                                            <input type="number" asp-for="Mojodi" class="form-control">
                                            <span asp-validation-for="Mojodi"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Script {
    <script>
        $(document).ready(function() {
            $('#GroupId').change(function() {
                var parentGroupId = $('#GroupId').val(); // مقدار GroupId انتخاب شده
                var productId = $('#productid').val(); // مقدار GroupId انتخاب شده
                console.log(parentGroupId);
                // اگر گروه انتخاب شده خالی نباشد
                if (parentGroupId) {
                    // ارسال درخواست Ajax به همان متد موجود در کنترلر
                    var url = '/Admin/Product/Edit?id=' + productId + '&gid=' + parentGroupId;
                    // var url = '@Url.Action("Edit", "Product", "Admin")';
                    console.log(url);
                    $.ajax({
                        url: url,
                        // data: { id: productId, gid: parentGroupId },
                        type: 'GET',
                        success: function(response) {
                            // لیست زیرگروه‌ها را به‌روز می‌کنیم
                            $('#SubGroupId').empty(); // پاک کردن قبلی‌ها
                            $('#SubGroupId').append('<option value="">انتخاب زیرگروه</option>'); // گزینه پیش‌فرض
                            console.log(response.productGroupList);

                            // اضافه کردن زیرگروه‌ها به لیست
                            //حتما index بزار وگرنه خطا میخوره
                            $.each(response.productGroupList, function(index,item) {
                                console.log(item);
                                $('#SubGroupId').append('<option value="' + item.groupId + '">' + item.groupTitle + '</option>');});

                        },
                        error: function() {
                            alert("خطا در بارگذاری زیرگروه‌ها");
                        }
                    });
                } else {
                    // اگر گروه انتخاب نشد، زیرگروه‌ها را پاک کن
                    $('#SubGroupId').empty();
                    $('#SubGroupId').append('<option value="">انتخاب زیرگروه</option>');
                }
            });
        });

        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function(e) {
                    $('#imgProduct').attr('src', e.target.result);
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
        $("#imgUp").change(function() {
            readURL(this);
        });
    </script>
}