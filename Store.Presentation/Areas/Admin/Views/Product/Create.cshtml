@using Store.Domain.Dtoes.AdminPanel.Product
@model CreateProductDto

@{
    ViewData["Title"] = "ایجاد محصول";
}

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="body">
                <form method="post" enctype="multipart/form-data">
                    <div class="row clearfix">
                        <div class="col-lg-8">
                            <h3>ایجاد محصول</h3>
                            <br />
                            <div>
                                <div class="form-group">
                                    <div class="form-line">
                                        <label asp-for="ProductTitle" class="control-label"></label>
                                        <input type="text" asp-for="ProductTitle" class="form-control">
                                        <span asp-validation-for="ProductTitle"></span>
                                    </div>
                                </div>
                            </div>
                            <div>
                                <div class="form-group">
                                    <div class="form-line">
                                        <label asp-for="GroupId" class="control-label"></label>
                                        <select type="text" asp-for="GroupId" class="form-control" asp-items="ViewBag.GPar" id="GroupId">
                                            <option value="">انتخاب گروه</option>
                                        </select>
                                        <span asp-validation-for="GroupId"></span>
                                    </div>
                                </div>
                            </div>
                            <div>
                                <div class="form-group">
                                    <div class="form-line">
                                        <label asp-for="SubGroup" class="control-label"></label>
                                        <select type="text" asp-for="SubGroup" class="form-control" asp-items="ViewBag.GSub" id="SubGroupId">
                                            <option value="">انتخاب گروه</option>
                                        </select>
                                        <span asp-validation-for="SubGroup"></span>
                                    </div>
                                </div>
                            </div>
                            <div>
                                <div class="form-group">
                                    <div class="form-line">
                                        <label asp-for="IsValid" class="control-label"></label>
                                        <input type="checkbox" asp-for="IsValid">
                                        <span asp-validation-for="IsValid"></span>
                                    </div>
                                </div>
                            </div>
                            <div>
                                <div class="form-group">
                                    <div class="form-line">
                                        <label asp-for="Tags" class="control-label"></label>
                                        <input type="text" asp-for="Tags" class="form-control" placeholder="با - جدا کنید">
                                        <span asp-validation-for="Tags"></span>
                                    </div>
                                </div>
                            </div>
                            
                            <div>
                                <button type="submit" asp-area="Admin" asp-controller="Product" asp-action="Create" class="btn btn-success m-l-15 waves-effect">ایجاد</button>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <h3>مشخصات</h3>
                            <br />
                            <div>
                                <div class="form-group">
                                    <div class="form-line">
                                        <label asp-for="ImageName" class="control-label"></label>
                                        <input type="file" name="ImgUp" class="form-control" />
                                        <span asp-validation-for="ImgUp"></span>
                                    </div>
                                </div>
                                <div>
                                    <div class="form-group">
                                        <div class="form-line">
                                            <label asp-for="Price" class="control-label"></label>
                                            <input type="number" asp-for="Price" class="form-control">
                                            <span asp-validation-for="Price"></span>
                                        </div>
                                    </div>
                                </div>
                                <div>
                                    <div class="form-group">
                                        <div class="form-line">
                                            <label asp-for="Mojodi" class="control-label"></label>
                                            <input type="number" asp-for="Mojodi" class="form-control">
                                            <span asp-validation-for="Mojodi"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section script {
    <script type="text/javascript">
        $(document).ready(function() {
            // وقتی که گروه تغییر کرد
            $('#GroupId').change(function() {
                var parentGroupId = $(this).val(); // مقدار GroupId انتخاب شده
                console.log(parentGroupId);
                // اگر گروه انتخاب شده خالی نباشد
                if (parentGroupId) {
                    // ارسال درخواست Ajax به همان متد موجود در کنترلر
                    $.ajax({
                        url: '@Url.Action("Create", "Product", "Admin")', 
                        data: { gid: parentGroupId },
                        type: 'GET',
                        success: function(response) {
                            // لیست زیرگروه‌ها را به‌روز می‌کنیم
                            $('#SubGroupId').empty(); // پاک کردن قبلی‌ها
                            $('#SubGroupId').append('<option value="">انتخاب زیرگروه</option>'); // گزینه پیش‌فرض
                            console.log(response.productGroupList);

                            // اضافه کردن زیرگروه‌ها به لیست
                            //حتما index بزار وگرنه خطا میخوره
                            $.each(response.productGroupList, function(index,item) {
                                console.log(item);
                                $('#SubGroupId').append('<option value="' + item.groupId + '">' + item.groupTitle + '</option>');});

                        },
                        error: function() {
                            alert("خطا در بارگذاری زیرگروه‌ها");
                        }
                    });
                } else {
                    // اگر گروه انتخاب نشد، زیرگروه‌ها را پاک کن
                    $('#SubGroupId').empty();
                    $('#SubGroupId').append('<option value="">انتخاب زیرگروه</option>');
                }
            });
        });
    </script>

}