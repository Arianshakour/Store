@using Store.Domain.Dtoes.AdminPanel.ProductGroup
@model CreateProductGroupDto

@{
    ViewData["Title"] = "افزودن دسته بندی";
}


<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="body">
                <form method="post">
                    <div class="row clearfix">
                        <div class="col-lg-8">
                            <h3>ایجاد دسته بندی</h3>
                            <br />
                            <div>
                                <div class="form-group">
                                    <div class="form-line">
                                        <label asp-for="GroupTitle" class="control-label"></label>
                                        <input type="text" asp-for="GroupTitle" class="form-control">
                                        <span asp-validation-for="GroupTitle"></span>
                                    </div>
                                </div>
                            </div>
                            <div>
                                <div class="form-group">
                                    <div class="form-line">
                                        <label class="control-label">زیر شاخه</label>
                                        <div id="subGroupsContainer">
                                            <!-- زیرگروه‌ها اینجا اضافه می‌شوند -->
                                        </div>
                                        <button type="button" onclick="addDiv()" class="btn btn-secondary">+</button>
                                    </div>
                                </div>
                            </div>
                            <div>
                                <button type="submit" asp-area="Admin" asp-controller="ProductGroup" asp-action="Create" class="btn btn-success m-l-15 waves-effect">ایجاد</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Script {
    <script>
        function addDiv(){
        var subGroupDiv = document.createElement("div");
        subGroupDiv.classList.add("form-group");
        var input = document.createElement("input");
        input.type = "text";
        input.classList.add("form-control");
        input.name = "subGroups[]"; // برای ارسال به کنترلر به صورت آرایه
        input.placeholder = "لطفا نام زیر گروه را وارد کنید";

        // اضافه کردن فیلد به container
        subGroupDiv.appendChild(input);

        // اضافه کردن فیلد جدید به کانتینر
        document.getElementById("subGroupsContainer").appendChild(subGroupDiv);
        }
    </script>
}