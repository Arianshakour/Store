@using Store.Domain.Dtoes.AdminPanel.ProductGroup
@model DeleteProductGroupDto

@{
    ViewData["Title"] = "حذف دسته بندی";
}
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="body">
                <form method="post">
                    <div class="row clearfix">
                        <div class="col-lg-8">
                            <h3>آیا از حذف دسته بندی اطمینان دارید ؟</h3>
                            <input type="hidden" asp-for="Id" />
                            <br />
                            <div>
                                <div class="form-group">
                                    <div class="form-line">
                                        <label asp-for="GroupTitle" class="control-label"></label>
                                        <input type="text" asp-for="GroupTitle" class="form-control" readonly>
                                        <span asp-validation-for="GroupTitle"></span>
                                    </div>
                                </div>
                            </div>
                            <div>
                                <div class="form-group">
                                    <div class="form-line">
                                        <label class="control-label">زیر شاخه</label>
                                        <div id="subGroupsContainer">
                                            @for (int i = 0; i < Model.SubGroups.Count; i++)
                                            {
                                                <div class="form-group sub-group-item">
                                                    <input type="hidden" name="SubGroups[@i].Id" value="@Model.SubGroups[i].Id" />
                                                    <input class="form-control" name="SubGroups[@i].GroupTitle" value="@Model.SubGroups[i].GroupTitle" readonly />
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div>
                                <button type="submit" asp-area="Admin" asp-controller="ProductGroup" asp-action="Delete" class="btn btn-danger m-l-15 waves-effect">حذف</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>