@using Store.Domain.Dtoes.AdminPanel
@model DeleteUserDto

@{
    ViewData["Title"] = "حذف کاربر";
}

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="body">
                <form method="post">
                    <div class="row clearfix">
                        <h2>آیا میخواهید کاربر زیر را حذف کنید ؟</h2>
                        <input type="hidden" asp-for="Id" />
                        <div class="col-lg-8">
                            <div>
                                <div class="form-group">
                                    <div class="form-line">
                                        <label asp-for="UserName" class="control-label"></label>
                                        <input type="text" asp-for="UserName" class="form-control" readonly>
                                        <span asp-validation-for="UserName"></span>
                                    </div>
                                </div>
                            </div>
                            <div>
                                <div class="form-group">
                                    <div class="form-line">
                                        <label asp-for="Email" class="control-label"></label>
                                        <input type="text" asp-for="Email" class="form-control" readonly>
                                        <span asp-validation-for="Email"></span>
                                    </div>
                                </div>
                            </div>
                            <div>
                                <div class="form-group">
                                    <div class="form-line">
                                        <label asp-for="UserRoles" class="control-label"></label>
                                        @foreach (var item in ViewBag.RoleName)
                                        {
                                            <div class="checkbox">
                                                <label>
                                                    <input type="checkbox" disabled name="UserRoles" value="@item.RoleId" @((Model.UserRoles.Any(r => r == item.RoleId) ? "checked" : ""))>
                                                    <span>@item.RoleTitle</span>
                                                </label>
                                            </div>
                                        }
                                        <span asp-validation-for="UserRoles"></span>
                                    </div>
                                </div>
                            </div>
                            <div>
                                <a role="button" asp-area="Admin" asp-controller="Home" asp-action="Index" class="btn btn-success m-l-15 waves-effect">برگشت به لیست</a>
                                <button type="submit" asp-area="Admin" asp-controller="Home" asp-action="Delete" class="btn btn-success m-l-15 waves-effect">حذف</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>