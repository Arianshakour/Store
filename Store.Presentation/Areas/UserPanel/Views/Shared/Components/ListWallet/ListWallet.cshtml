@using Store.Domain.Common.Date
@using Store.Domain.ViewModels
@model WalletViewModel

<table class="table table-bordered">
    <tr>
        <th>مبلغ</th>
        <th>تاریخ</th>
        <th>نوع تراکنش</th>
        <th>شرح</th>
    </tr>
    @foreach (var item in Model.walletList)
    {
        <tr>
            <td>@item.Amount.ToString("#,0 تومان")</td>
            <td>
                @item.CreateDate.ToShamsi()
            </td>
            <td>
                @if (item.TypeId == 1)
                {
                    <p class="text-success">واریز به حساب</p>
                }
                else
                {
                    <p class="text-danger">برداشت از حساب</p>
                }
            </td>
            <td>
                @item.Description
            </td>
        </tr>
    }
</table>