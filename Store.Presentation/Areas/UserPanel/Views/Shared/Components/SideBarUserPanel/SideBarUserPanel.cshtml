@using Store.Domain.Dtoes.UserPanel
@using Store.Domain.Common.Date
@model SideBarUserPanelDto

<div class="col-md-3 col-sm-4 col-xs-12">
    <aside>

        <div class="avatar-layer">
            <div class="img-layer">
                <a href="" class="change-image"><i class="zmdi zmdi-edit"></i></a>
                <img src="/SiteQaleb/UserAvatar/@Model.ImageName">
            </div>
            <div class="detail">
                <span> @Model.UserName </span>
                <span> عضویت : @Model.CreateOn.ToShamsi() </span>
            </div>
        </div>

        <section>
            <header><h3> میز کار </h3></header>
            <div class="inner">
                <ul>
                    <li><a href="/UserPanel"> مشاهده حساب کابری </a></li>
                    <li><a asp-area="UserPanel" asp-controller="Home" asp-action="EditProfile" asp-route-id="@Model.Id"> ویرایش حساب کابری </a></li>
                    <li><a asp-area="UserPanel" asp-controller="Home" asp-action="ChangePass" asp-route-id="@Model.Id"> تغییر رمز عبور </a></li>
                    <li><a href=""> کیف پول شما </a></li>
                    <li><a href=""> تنظیمات حساب کاربری </a></li>
                    <li><a asp-area="" asp-controller="Login" asp-action="Logout"> خروج از حساب کاربری </a></li>
                </ul>
            </div>
        </section>
    </aside>
</div>