@using Store.Domain.Dtoes.Login
@model ForgotPasswordDto

@{
    ViewData["Title"] = "بازیابی کلمه عبور";
}

<nav aria-label="breadcrumb">
    <ul class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">تاپ لرن</a></li>
        <li class="breadcrumb-item active" aria-current="page">بازیابی کلمه عبور</li>
    </ul>
</nav>

<main class="client-page">
    <div class="container-content">
        @if (ViewBag.IsSuccess != null)
        {
            <div class="alert alert-success">
                <p class="help-block">ایمیل بازیابی کلمه عبور برای شما ارسال شد</p>
            </div>


        }
        <header><h2> بازیابی کلمه عبور </h2></header>

        <div class="form-layer">

            <form method="post">

                <div class="input-group">
                    <span class="input-group-addon" id="email-address"><i class="zmdi zmdi-email"></i></span>
                    <input asp-for="Email" type="text" class="form-control" placeholder="ایمیل را وارد کنید" aria-describedby="email-address">

                </div>
                <span asp-validation-for="Email"></span>

                <br />
                <button class="btn btn-success" asp-controller="Login" asp-action="ForgotPass"> تایید و ارسال </button>

            </form>
        </div>

    </div>
</main>